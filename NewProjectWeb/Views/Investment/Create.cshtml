
@{
    ViewBag.Title = "Create";
  
}

<nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom"></nav>
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Investment</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="~/Scheme/Index">Investment</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Investment Create</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Investment Create</h3>
                </div>
                <form role="form" action="~/Investment/Create" method="post" style="width: 40%;margin-left: 7%;">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-group-merge input-group-alternative mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"></span>
                                </div>
                                <input class="form-control" placeholder="Topup Date" name="TDate" type="date">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-group-merge input-group-alternative mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"></span>
                                </div>
                                <input class="form-control" placeholder="Select Investment ID" name="TopupID" type="text">
                            </div>
                            <div class="input-group input-group-merge input-group-alternative mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"></span>
                                </div>
                                <input class="form-control" placeholder="Invester name" type="text">
                            </div>
                            <div class="input-group input-group-merge input-group-alternative mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"></span>
                                </div>
                                <input class="form-control" placeholder="Topup Amount" name="TAmount" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-4">Save</button>
                        <a href="~/Investment/Index" type="button" class="btn btn-primary mt-4">Close</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

