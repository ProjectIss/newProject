@using System.Data
@model DataSet
@{

    ViewBag.Title = "Index";
}


<nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="navbar-search navbar-search-light form-inline mr-sm-3" id="navbar-search-main">
                <div class="form-group mb-0">
                    <div class="input-group input-group-alternative input-group-merge">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input class="form-control" placeholder="Search" type="text">
                    </div>
                </div>
                <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close"></button>
            </form>
        </div>
    </div>
</nav>
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Topup-Investment</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Investment</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Investment Index</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="~/Investment/Create" class="btn btn-sm btn-neutral">New Item</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header border-0">
                    <h3 class="mb-0">Investment</h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Top ID</th>
                                <th scope="col" class="sort" data-sort="name">Top Date</th>
                                <th scope="col" class="sort" data-sort="name">Select Investment ID</th>
                                <th scope="col" class="sort" data-sort="name">Invester Name</th>
                                <th scope="col" class="sort" data-sort="name">Topup Amount</th>
                                <th scope="col" class="sort" data-sort="name">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (DataRow row in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td>@row["TopupId"]</td>
                                    <td>@row["TDate"]</td>
                                    <td>@row["InvId"]</td>
                                    <td>@row["InvName"]</td>
                                    <td>@row["TAmount"]</td>
                                    <td><button title="Delete" onclick="itemdelete(@row["TopupId"],@row["InvId"])" class="btn btn-primary">Delete</button></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/vendor/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {

       

    });
    function itemdelete(id,vid) {
        debugger
        if (confirm('Are you sure want to delete this item?')) {
            $.ajax({
                url: "/Investment/Delete",
                type: "post",
                data: { TopupID: id, InvID: vid },
                success: function (d) {
                    window.location.reload();
                }
            });
        
        } 
    }
</script>